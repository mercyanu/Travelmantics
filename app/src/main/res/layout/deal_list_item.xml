<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:layout_marginTop="@dimen/large_margin_16">


    <ImageView
        android:id="@+id/deal_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/standard_margin_8"
        android:layout_marginBottom="@dimen/standard_margin_8"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <TextView
        android:id="@+id/deal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_margin_8"
        android:layout_marginTop="@dimen/large_margin_16"
        android:layout_marginEnd="8dp"
        android:text="Deal Location Title"
        android:textColor="@color/textWhite"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/deal_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deal_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_margin_8"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="Description of Deal"
        android:textColor="@color/textWhite"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/deal_img"
        app:layout_constraintTop_toBottomOf="@+id/deal_title" />

    <TextView
        android:id="@+id/currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="@dimen/standard_margin_8"
        android:text="â‚¦"
        android:textColor="@color/textWhite"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deal_price" />

    <TextView
        android:id="@+id/deal_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/large_margin_16"
        android:layout_marginBottom="@dimen/standard_margin_8"
        android:text="Price"
        android:textSize="17sp"
        android:textColor="@color/textWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
